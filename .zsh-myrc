# in ~/.zshrc las line
# source ~/.zsh-myrc
if [[ $ZSH == *"oh-my-zsh"* ]]; then  
    PROMPT='%n$fg_no_bold[cyan]@$reset_color%/$(git_prompt_info)> '
else
    PROMPT='%n@%/> '
fi

GITADDR=$(which git)
GIT () {
    extra=''
    arg="$@"
    if [ "$arg" = 'log' ]; then
        shift
        extra='log --pretty=oneline --graph'
    fi
    eval "${GITADDR} ${extra} ${@}"
}

alias git=GIT
setopt complete_aliases
