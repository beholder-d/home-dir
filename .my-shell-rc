# in ~/.zshrc or ~/.bashrc last line add
# source ~/.my-shell-rc
if [[ $ZSH == *"oh-my-zsh"* ]]; then  
    PROMPT='%n$fg_no_bold[cyan]@$reset_color%/$(git_prompt_info)> '
else
    PROMPT='%n@%/> '
fi

export GIT_PAGER='less -X -F'

MGITADDR=$(which git)
MGIT () {
    extra=''
    arg="$@"
    if [ "$arg" = 'log' ]; then
        shift
        extra='log --pretty=oneline --graph'
    fi
    eval "${MGITADDR} ${extra} "$(printf ' %q' "$@")
}

alias git=MGIT
setopt complete_aliases
